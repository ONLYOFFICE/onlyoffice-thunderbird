{
    "manifest_version": 2,
    "browser_specific_settings": {
        "gecko": {
            "id": "helloworld@yoursite.com",
            "strict_min_version": "128.0"
        }
    },
    "name": "ONLYOFFICE Document Server",
    "description": "Edit documents in Thunderbird using ONLYOFFICE Document Server",
    "version": "1.0",
    "author": "ONLYOFFICE",
    "default_locale": "en-US",
    "icons": {
      "32": "images/icon.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' http://127.0.0.1:* https://127.0.0.1:* http://localhost:* https://localhost:*; object-src 'self'",
    "permissions": [
      "messagesRead",
      "messagesModify",
      "menus",
      "tabs",
      "mailTabs",
      "compose",
      "downloads",
      "messagesMove",
      "storage",
      "notifications",
      "activeTab",
      "http://127.0.0.1:*/*",
      "https://127.0.0.1:*/*",
      "http://localhost:*/*",
      "https://localhost:*/*"
    ],
    "background": {
      "scripts": [
        "background.js"
      ],
      "persistent": true
    },
    "message_display_action": {
      "default_title": "Open in ONLYOFFICE",
      "default_icon": {
        "32": "images/icon.png"
      }
    },
    "compose_action": {
      "default_title": "Open in ONLYOFFICE",
      "default_icon": {
        "32": "images/icon.png"
      }
    }
}