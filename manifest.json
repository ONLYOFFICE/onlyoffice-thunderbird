{
    "manifest_version": 2,
    "browser_specific_settings": {
        "gecko": {
            "id": "support@onlyoffice.com",
            "strict_min_version": "128.0"
        }
    },
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "1.0",
    "author": "ONLYOFFICE",
    "default_locale": "en-US",
    "icons": {
      "32": "images/icon.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' $SERVER_URL$ http://localhost:* https://localhost:*; object-src 'self'",
    "permissions": [
      "messagesRead",
      "messagesModify",
      "accountsRead",
      "menus",
      "tabs",
      "mailTabs",
      "compose",
      "downloads",
      "messagesMove",
      "notifications",
      "activeTab",
      "$SERVER_URL$/*",
      "http://localhost:*/*",
      "https://localhost:*/*"
    ],
    "background": {
      "scripts": [
        "background.js"
      ],
      "type": "module",
      "persistent": true
    },
    "message_display_action": {
      "default_title": "__MSG_onlyofficeButton__",
      "default_icon": {
        "32": "images/icon.png"
      }
    },
    "compose_action": {
      "default_title": "__MSG_onlyofficeButton__",
      "default_icon": {
        "32": "images/icon.png"
      },
      "type": "menu"
    }
}